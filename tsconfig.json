{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["node"],
    "esModuleInterop": true, // Allows default imports from modules with no default export
    "resolveJsonModule": true, // Allows importing JSON files
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
